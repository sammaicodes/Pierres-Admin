@using Business.Models;

<h1>Vendors</h1>

@if (@Model.Count == 0)
{
  <h3>No vendors have been added yet!</h3>
} 

@foreach (Vendor v in Model)
{
  <h3><a href="/vendors/@v.Id">@v.VendorName @v.Description /a></h3>
}
<h3><a href='/vendors/new'>Add a new vendor</a></h3>
<p><a href='/'>Back home</a></p>