@using Business.Models;

@{
  Layout = "_Layout";
}
<body>
  
<h2>Vendors</h2>

@if (@Model.Count == 0)
{
  <h3>No vendors have been added yet!</h3>
} 
<div class="container">
  <div class="jumbotron">
    @foreach (Vendor v in Model)
    {
      <h3 style="background:#FDFD96"><a href="/vendors/@v.Id">@v.VendorName @v.Description</a></h3>
    }
  </div>
</div>
<h3><a href='/vendors/new'>Add a new vendor</a></h3>
<p><a href='/'>Back home</a></p>

</body>
@Html.Partial("Footer")